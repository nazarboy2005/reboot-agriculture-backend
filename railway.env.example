# Railway Environment Variables Template
# Copy this file to railway.env and fill in your values

# Database Configuration
DATABASE_URL=postgresql://username:password@host:port/database
DB_USERNAME=your_db_username
DB_PASSWORD=your_db_password

# JWT Configuration
JWT_SECRET=your-super-secure-jwt-secret-key-here-make-it-long-and-random

# Google OAuth2 Configuration
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=https://reboot-agrismart-1077945709935.europe-west1.run.app/api/login/oauth2/code/google

# External API Keys
WEATHER_API_KEY=your-openweathermap-api-key
GEMINI_API_KEY=your-gemini-api-key

# Email Configuration
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password

# Frontend URL
FRONTEND_URL=https://reboot-agriculture-frontend.vercel.app

# Admin Configuration
ADMIN_PASSWORD=your-secure-admin-password

# Server Configuration
PORT=9090
